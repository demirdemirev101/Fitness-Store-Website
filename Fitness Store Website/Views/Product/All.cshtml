@model List<ProductsViewModel>

@{
    ViewBag.Title = "All Products";
}

<h2 class="text-center">@ViewBag.Title</h2>

<form method="get" asp-action="All" class="form-inline mb-4">
    <select name="categoryId" class="form-select me-2">
        <option value="">Всички категории</option>
        <option value="1">Добавки</option>
        <option value="2">Дрехи</option>
        <option value="3">Аксесоари</option>
    </select>

    <select name="sortByName" class="form-select me-2">
        <option value="">Име</option>
        <option value="asc">Име ↑</option>
        <option value="desc">Име ↓</option>
    </select>

    <select name="sortByPrice" class="form-select me-2">
        <option value="">Цена</option>
        <option value="asc">Цена ↑</option>
        <option value="desc">Цена ↓</option>
    </select>

    <button type="submit" class="btn btn-primary">Филтрирай</button>
</form>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card" style="width: 18rem; margin: auto;">
                <img src="@product.URL" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">
                        Цена: <strong>@product.Price.ToString("0.00") лв.</strong>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
